{% include 'templates/header.twig' %}
<div id="LoginForm">
    <div class="container">
        <h1 class="form-heading">MEME GENERATOR</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>INSCRIPTION</h2>
                    <p>Inscrivez-vous !!!</p>
                </div>
                <form action="" id="Login" method="POST">

                    <div class="form-group">

                        <input type="text" name="inputPseudo" class="form-control" id="inputPseudo" placeholder="Entrez votre Pseudo" required autofocus>

                    </div>

                    <div class="form-group">

                        <input type="email" name="inputEmail" class="form-control" id="inputEmail" placeholder="Entrez votre adresse email" required>

                    </div>

                    <div class="form-group">

                        <input type="password" name="inputPassword" class="form-control" id="inputPassword" placeholder="Mot de passe" required>

                    </div>
                    <div class="form-group">

                        <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirmez le mot de passe" required onblur='show()'>

                    </div>
                    <div class="forgot">
                        <a href="login">Se connecter</a>
                    </div>

                    <script>
                    function show() {
                        var password = document.querySelector('#inputPassword').value;
                        var confirm = document.querySelector('#confirmPassword').value;

                        if(password != confirm) {
                            document.querySelector('#inputPassword').style.borderColor = "red";
                            document.querySelector('#confirmPassword').style.borderColor = 'red';
                            document.querySelector('#submitBtn').disabled = true;
                        }
                        else {
                            document.querySelector('#inputPassword').style.borderColor = "#d4d4d4";
                            document.querySelector('#confirmPassword').style.borderColor = '#d4d4d4';
                            document.querySelector('#submitBtn').disabled = false;
                        }
                    }
                    </script>
                     <button type="submit" name="addUserBtn" id="submitBtn" class="btn btn-primary">S'inscrire</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% include 'templates/footer.twig' %}
